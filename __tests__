import React, { Component } from 'react';
import Space from "./Space.js";
import { mount } from 'enzyme';

describe("Space", () => {
	let props;
	let mountedSpace;

	const Space = () => {
		if(!mountedSpace) {
			mountedSpace = mount(
				<Space {...props} />
			);
		}
		return mountedSpace;
	}

	beforeEach(() => {
		props = {
			spaceState: 0,
		};
		mountedSpace = undefined;
	});

	it("always renders a div", () => {
		const divs = Space().find("div");
		expect(divs.length).toBeGreaterThan(0);
	});
});

